# DayZ Epoch Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# STEAM CONFIGURATION
# =============================================================================
# Your Steam account credentials (required for downloading Arma 2 files)
STEAM_USERNAME=your_steam_username
STEAM_PASSWORD=your_steam_password

# =============================================================================
# MYSQL DATABASE CONFIGURATION
# =============================================================================
# MySQL root password (used for database administration)
MYSQL_ROOT_PASSWORD=your_secure_root_password

# MySQL database name for DayZ Epoch
MYSQL_DATABASE=dayz_epoch

# MySQL user credentials for DayZ Epoch server
MYSQL_USER=dayz
MYSQL_PASSWORD=your_secure_dayz_password

# MySQL host (usually 'mysql' when using docker-compose)
MYSQL_HOST=mysql

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server hostname displayed in server browser
SERVER_HOSTNAME=Your DayZ Epoch Server

# Server password (leave empty for no password)
SERVER_PASSWORD=

# Admin password for server administration
SERVER_ADMIN_PASSWORD=your_admin_password

# Maximum number of players
SERVER_MAX_PLAYERS=50

# Server port (default: 2302)
SERVER_PORT=2302

# =============================================================================
# BATTLEYE CONFIGURATION
# =============================================================================
# BattlEye RCon password for remote administration
RCON_PASSWORD=your_rcon_password

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Server time acceleration (1.0 = normal time, 2.0 = 2x speed, etc.)
TIME_ACCELERATION=1.0

# Enable/disable third-person view (0 = disabled, 1 = enabled)
THIRD_PERSON=1

# Enable/disable crosshair (0 = disabled, 1 = enabled)
CROSSHAIR=1

# Server difficulty (0 = Recruit, 1 = Regular, 2 = Veteran, 3 = Expert)
DIFFICULTY=1

# Enable/disable AI (0 = disabled, 1 = enabled)
AI_ENABLED=0

# Server restart interval in hours (0 = no automatic restart)
RESTART_INTERVAL=4
